{
	/* Enforcing options
	 * When set to true, these options will make JSHint produce more warnings about your code.
	 */

	"bitwise": false, // This option prohibits the use of bitwise operators
	"camelcase": true, // This option allows you to force all variable names to use either camelCase style or UPPER_CASE with underscores.
	"curly": true, // This option requires you to always put curly braces around blocks in loops and conditionals.
	"eqeqeq": true, // This options prohibits the use of == and != in favor of === and !==.
	"forin": true, // This option requires all for in loops to filter object's items.
	"immed": true, // This option prohibits the use of immediate function invocations without wrapping them in parentheses.
	"indent": 4, // This option enforces specific tab width for your code.
	"latedef": "nofunc", // This option prohibits the use of a variable before it was defined.
	"newcap": false, // This option requires you to capitalize names of constructor functions.
	"noarg": true, // This option prohibits the use of arguments.caller and arguments.callee.
	"noempty": true, // This option warns when you have an empty block in your code.
	"nonew": true, // This option prohibits the use of constructor functions for side-effects.
	"plusplus": false, // This option prohibits the use of unary increment and decrement operators.
	"quotmark": true, // This option enforces the consistency of quotation marks used throughout your code.
	"undef": true, // This option prohibits the use of explicitly undeclared variables.
	"unused": true, // This option warns when you define and never use your variables.
	"strict": false, // This option requires all functions to run in ECMAScript 5's strict mode.
	"trailing": true, // This option makes it an error to leave a trailing whitespace in your code.
	"maxparams": 6, // This option lets you set the max number of formal parameters allowed per function.
	"maxdepth": 6, // This option lets you control how nested do you want your blocks to be.

	/* Relaxing options
	 * When set to true, these options will make JSHint produce less warnings about your code.
	 */

	"asi": false, // This option suppresses warnings about missing semicolons.
	"gcl": true, // This option makes JSHint compatible with Google Closure Compiler.
	"globalstrict": true, // This option suppresses warnings about the use of global strict mode.

	/* Environments
	 * These options let JSHint know about some pre-defined global variables.
	 */

	"browser": true, // This option defines globals exposed by modern browsers.
	"devel": true, // This option defines globals that are usually used for logging poor-man's debugging
	"jquery": true, // This option defines globals exposed by the jQuery JavaScript library.
	"phantom": true, // This option defines globals available when your core is running inside of the PhantomJS runtime environment.
	"worker": true, // This option defines globals available when your code is running inside of a Web Worker.

	/* Globals */

	"globals": {
		"APP": true, // Our basic, skeleton main namespace
		"define": true, // Require.js define
		"jasmine": true,
		"afterEach": true,
		"beforeEach": true,
		"describe": true,
		"expect": true,
		"loadFixtures": true,
		"it": true,
		"module": true,
		"window": true,
		"navigator": true,
		"devel": true,
		"nonstandard": true,
		"jQuery": true, // jQuery
		"WebFont": true, // Google WebFont loader lib
		"$": true, // jQuery
		"moment": true, // Moment.js lib
		"Modernizr": true, // Modernizr lib
		"Handlebars": true, // Handlebars lib
		"History": true, // History.js lib
		"Hammer": true, // Hammer.js lib
		"FB": true, // Facebook SDK
		"require": true, // Require.js lib
		"log": true, // Custom logger
		"viewport": true, // Viewport utility
		"ga": true, // Google Analytics
		"process": true, // Node.JS process
		"YT": true, // YouTube API
		"$f": true, // FrugaLoop (Vimeo)
		"MobileDetect": true, // MobileDetect
		"docCookies": true // Cookie handling utility
	}

}